{
    "appenders": [
        {
            "type": "console"
        },
        {
            "type": "dateFile",
            "filename": "${opts:base}/logs/con-log-${opts:serverId}.log",
            "pattern": "-yyyyMMdd",
            "layout": {
            "type": "basic"
            },
            "backups": 5,
            "category": "con-log"
        },
        {
            "type": "dateFile",
            "filename": "${opts:base}/logs/rpc-log-${opts:serverId}.log",
            "pattern": "-yyyyMMdd",
            "layout": {
            "type": "basic"
            },
            "backups": 5,
            "category": "rpc-log"
        },
        {
            "type": "dateFile",
            "filename": "${opts:base}/logs/forward-log-${opts:serverId}.log",
            "pattern": "-yyyyMMdd",
            "layout": {
            "type": "basic"
            },
            "backups": 5,
            "category": "forward-log"
        },
        {
            "type": "dateFile",
            "filename": "${opts:base}/logs/crash-${opts:serverId}.log",
            "pattern": "-yyyyMMdd",
            "layout": {
            "type": "basic"
            },
            "backups": 5,
            "category":"crash-log"
        },
        {
            "type": "dateFile",
            "filename": "${opts:base}/logs/admin.log",
            "pattern": "-yyyyMMdd",
